<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/small_padding"
    android:layout_marginEnd="@dimen/small_padding"
    android:layout_marginTop="@dimen/small_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding">

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_start_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_date"
            android:text="From "
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_date"
            android:layout_toEndOf="@id/text_view_start_time_label"
            android:text="00:00 "
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_end_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_date"
            android:layout_toEndOf="@id/text_view_start_time"
            android:text=" to "
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_date"
            android:layout_toEndOf="@id/text_view_end_time_label"
            android:text="00:00"
            android:maxLines="1"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>