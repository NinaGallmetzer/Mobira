<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/small_padding"
    android:layout_marginTop="@dimen/small_padding"
    android:layout_marginEnd="@dimen/small_padding"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding">
        
        <TextView
            android:id="@+id/text_view_bird_item_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Species"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/bird_item_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/bird_item_time_label" />

        <TextView
            android:id="@+id/text_view_bird_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:layout_toEndOf="@id/bird_item_time_label"
            android:paddingHorizontal="@dimen/tiny_padding"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="00:00" />

        <TextView
            android:id="@+id/text_view_bird_item_net_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:layout_toEndOf="@id/text_view_bird_item_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_view_bird_item_net_label" />

        <TextView
            android:id="@+id/text_view_bird_item_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:layout_toEndOf="@id/text_view_bird_item_net_label"
            android:paddingHorizontal="@dimen/tiny_padding"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0" />

        <TextView
            android:id="@+id/bird_item_sex_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:layout_toEndOf="@id/text_view_bird_item_net"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/bird_item_sex_label" />

        <TextView
            android:id="@+id/text_view_bird_item_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:layout_toEndOf="@id/bird_item_sex_label"
            android:paddingHorizontal="@dimen/tiny_padding"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0" />

        <TextView
            android:id="@+id/bird_item_age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:layout_toEndOf="@id/text_view_bird_item_sex"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/bird_item_age_label" />

        <TextView
            android:id="@+id/text_view_bird_item_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_bird_item_species"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/bird_item_age_label"
            android:paddingHorizontal="@dimen/tiny_padding"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>