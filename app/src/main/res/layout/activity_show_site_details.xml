<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ShowSiteDetailsActivity"
    tools:ignore="HardcodedText"
    android:padding="@dimen/small_padding">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_padding"
            android:text="Title:"/>

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingTop="@dimen/tiny_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="33dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:paddingTop="@dimen/small_padding"
            android:text="Description:"/>

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:paddingTop="@dimen/tiny_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_description"
            android:paddingTop="@dimen/small_padding"
            android:text="Latitude:"/>

        <TextView
            android:id="@+id/text_view_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitude"
            android:paddingTop="@dimen/tiny_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_latitude"
            android:paddingTop="@dimen/small_padding"
            android:text="Longitude:"/>

        <TextView
            android:id="@+id/text_view_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/longitude"
            android:paddingTop="@dimen/tiny_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_longitude"
            android:paddingTop="@dimen/small_padding"
            android:text="Comment:"/>

        <TextView
            android:id="@+id/text_view_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment"
            android:paddingTop="@dimen/tiny_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/actions_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Actions"
        app:icon="@drawable/ic_actions_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_site_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/actions_fab"
        app:layout_constraintEnd_toEndOf="@+id/actions_fab"
        app:srcCompat="@drawable/ic_delete_24"
        android:contentDescription="DELETE SITE" />

    <TextView
        android:id="@+id/delete_site_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Delete Site"
        app:layout_constraintBottom_toBottomOf="@+id/delete_site_fab"
        app:layout_constraintEnd_toStartOf="@+id/delete_site_fab"
        app:layout_constraintTop_toTopOf="@+id/delete_site_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_site_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/delete_site_fab"
        app:layout_constraintEnd_toEndOf="@+id/delete_site_fab"
        app:srcCompat="@drawable/ic_edit_24"
        android:contentDescription="EDIT SITE" />

    <TextView
        android:id="@+id/edit_site_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Edit Details"
        app:layout_constraintBottom_toBottomOf="@+id/edit_site_fab"
        app:layout_constraintEnd_toStartOf="@+id/edit_site_fab"
        app:layout_constraintTop_toTopOf="@+id/edit_site_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_records_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/edit_site_fab"
        app:layout_constraintEnd_toEndOf="@+id/edit_site_fab"
        app:srcCompat="@drawable/ic_add_record_24"
        android:contentDescription="SHOW RECORDS" />

    <TextView
        android:id="@+id/show_records_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Show Records"
        app:layout_constraintBottom_toBottomOf="@+id/show_records_fab"
        app:layout_constraintEnd_toStartOf="@+id/show_records_fab"
        app:layout_constraintTop_toTopOf="@+id/show_records_fab" />

</androidx.constraintlayout.widget.ConstraintLayout>
