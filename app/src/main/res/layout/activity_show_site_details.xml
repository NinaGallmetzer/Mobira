<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".entities.site.ShowSiteDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_secondary_variant"
            android:paddingHorizontal="@dimen/medium_padding"
            android:paddingVertical="@dimen/bigger_padding"
            android:text="@string/text_view_site_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:paddingStart="@dimen/medium_padding"
            android:paddingTop="@dimen/big_padding"
            android:text="@string/description"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/design_default_color_secondary_variant" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:paddingStart="@dimen/bigger_padding"
            android:paddingTop="@dimen/small_padding"
            android:text="@string/description"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_description"
            android:paddingStart="@dimen/medium_padding"
            android:paddingTop="@dimen/big_padding"
            android:text="@string/latitude"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/design_default_color_secondary_variant" />

        <TextView
            android:id="@+id/text_view_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitude"
            android:paddingStart="@dimen/bigger_padding"
            android:paddingTop="@dimen/small_padding"
            android:text="@string/latitude"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_latitude"
            android:paddingStart="@dimen/medium_padding"
            android:paddingTop="@dimen/big_padding"
            android:text="@string/longitude"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/design_default_color_secondary_variant" />

        <TextView
            android:id="@+id/text_view_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/longitude"
            android:paddingStart="@dimen/bigger_padding"
            android:paddingTop="@dimen/small_padding"
            android:text="@string/longitude"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_longitude"
            android:paddingStart="@dimen/medium_padding"
            android:paddingTop="@dimen/big_padding"
            android:text="@string/comment"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/design_default_color_secondary_variant" />

        <TextView
            android:id="@+id/text_view_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment"
            android:ellipsize="end"
            android:paddingStart="@dimen/bigger_padding"
            android:paddingTop="@dimen/small_padding"
            android:text="@string/comment"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/actions_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/huge_padding"
        android:layout_marginBottom="@dimen/huge_padding"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/action"
        app:icon="@drawable/baseline_more_horiz_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_site_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/delete"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/actions_fab"
        app:layout_constraintEnd_toEndOf="@+id/actions_fab"
        app:srcCompat="@drawable/ic_delete_24" />

    <TextView
        android:id="@+id/delete_site_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="@+id/delete_site_fab"
        app:layout_constraintEnd_toStartOf="@+id/delete_site_fab"
        app:layout_constraintTop_toTopOf="@+id/delete_site_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_site_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/edit"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/delete_site_fab"
        app:layout_constraintEnd_toEndOf="@+id/delete_site_fab"
        app:srcCompat="@drawable/ic_edit_24" />

    <TextView
        android:id="@+id/edit_site_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="@+id/edit_site_fab"
        app:layout_constraintEnd_toStartOf="@+id/edit_site_fab"
        app:layout_constraintTop_toTopOf="@+id/edit_site_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_records_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/show"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/edit_site_fab"
        app:layout_constraintEnd_toEndOf="@+id/edit_site_fab"
        app:srcCompat="@drawable/baseline_list_alt_24" />

    <TextView
        android:id="@+id/show_records_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/show"
        app:layout_constraintBottom_toBottomOf="@+id/show_records_fab"
        app:layout_constraintEnd_toStartOf="@+id/show_records_fab"
        app:layout_constraintTop_toTopOf="@+id/show_records_fab" />

</androidx.constraintlayout.widget.ConstraintLayout>
