<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".entities.ringingrecord.ActivityShowRingingRecordDetails"
    tools:ignore="HardcodedText"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/bigger_padding"
            android:paddingHorizontal="@dimen/medium_padding"
            android:background="@color/design_default_color_secondary_variant"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Ringing Protocol"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/record_site_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/big_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:text="Site:"/>
                <TextView
                    android:id="@+id/record_site_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_site_title_label"
                    android:paddingTop="@dimen/small_padding"
                    android:paddingStart="@dimen/bigger_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Test site 1"/>

                <TextView
                    android:id="@+id/record_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_site_title"
                    android:paddingTop="@dimen/big_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:text="Date:"/>
                <TextView
                    android:id="@+id/record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_date_label"
                    android:paddingTop="@dimen/small_padding"
                    android:paddingStart="@dimen/bigger_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="2020-20-20"/>

                <LinearLayout
                    android:id="@+id/time_and_temperature_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_date"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:id="@+id/time_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8">
                        <TextView
                            android:id="@+id/time_layout_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/big_padding"
                            android:paddingStart="@dimen/medium_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:text="Time:"/>
                        <LinearLayout
                            android:id="@+id/start_time_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/time_layout_title">
                            <TextView
                                android:id="@+id/record_start_time_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:paddingStart="@dimen/bigger_padding"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/design_default_color_secondary_variant"
                                android:textStyle="italic"
                                android:text="Opening:"/>
                            <TextView
                                android:id="@+id/record_start_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:textAlignment="viewEnd"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:text="07:00"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/end_time_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/start_time_layout">
                            <TextView
                                android:id="@+id/record_end_time_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:paddingStart="@dimen/bigger_padding"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/design_default_color_secondary_variant"
                                android:textStyle="italic"
                                android:text="Closing:"/>
                            <TextView
                                android:id="@+id/record_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:textAlignment="viewEnd"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:text="13:00"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/temperature_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7">

                        <TextView
                            android:id="@+id/temperature_layout_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/big_padding"
                            android:paddingStart="@dimen/medium_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:text="Temperature:"/>
                        <LinearLayout
                            android:id="@+id/start_temperature_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/temperature_layout_title">
                            <TextView
                                android:id="@+id/record_start_temperature_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:paddingStart="@dimen/bigger_padding"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/design_default_color_secondary_variant"
                                android:textStyle="italic"
                                android:text="Begin:"/>
                            <TextView
                                android:id="@+id/record_start_temperature"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:paddingEnd="@dimen/big_padding"
                                android:textAlignment="viewEnd"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:text="7.5"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/end_temperature_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/start_temperature_layout">
                            <TextView
                                android:id="@+id/record_end_temperature_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:paddingStart="@dimen/bigger_padding"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/design_default_color_secondary_variant"
                                android:textStyle="italic"
                                android:text="End:"/>
                            <TextView
                                android:id="@+id/record_end_temperature"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="@dimen/tiny_padding"
                                android:paddingEnd="@dimen/big_padding"
                                android:textAlignment="viewEnd"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:text="13.2"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/xxx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3">

                        <TextView
                            android:id="@+id/unit_layout_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/big_padding"
                            android:paddingStart="@dimen/medium_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/design_default_color_secondary_variant"/>
                        <TextView
                            android:id="@+id/record_start_temperature_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/unit_layout_title"
                            android:paddingVertical="@dimen/tiny_padding"
                            android:paddingEnd="@dimen/big_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:text="°C"/>
                        <TextView
                            android:id="@+id/record_end_temperature_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/record_start_temperature_unit"
                            android:paddingVertical="@dimen/tiny_padding"
                            android:paddingEnd="@dimen/big_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:text="°C"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/general_weather_conditions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_and_temperature_layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/general_weather_conditions_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/medium_padding"
                        android:paddingTop="@dimen/big_padding"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/design_default_color_secondary_variant"
                        android:text="Weather:"/>

                    <LinearLayout
                        android:id="@+id/general_weather_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/general_weather_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingVertical="@dimen/tiny_padding"
                            android:paddingStart="@dimen/bigger_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textStyle="italic"
                            android:text="General:"/>
                        <TextView
                            android:id="@+id/record_general_weather"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingVertical="@dimen/tiny_padding"
                            android:paddingHorizontal="@dimen/small_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:text="sunny"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/wind_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingVertical="@dimen/tiny_padding"
                            android:paddingStart="@dimen/bigger_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/design_default_color_secondary_variant"
                            android:textStyle="italic"
                            android:text="Wind:"/>
                        <TextView
                            android:id="@+id/record_wind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/tiny_padding"
                            android:paddingHorizontal="@dimen/big_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:text="3"/>
                        <TextView
                            android:id="@+id/record_wind_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/tiny_padding"
                            android:paddingEnd="@dimen/huge_padding"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:text="Bft"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/record_coordinator_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/general_weather_conditions_layout"
                    android:paddingStart="@dimen/medium_padding"
                    android:paddingTop="@dimen/big_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:text="Coordinator:"/>
                <TextView
                    android:id="@+id/record_coordinator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_coordinator_label"
                    android:paddingTop="@dimen/small_padding"
                    android:paddingHorizontal="@dimen/bigger_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Jane Doe"/>

                <TextView
                    android:id="@+id/record_comment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_coordinator"
                    android:paddingTop="@dimen/big_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:text="Comment:"/>
                <TextView
                    android:id="@+id/record_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_comment_label"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/small_padding"
                    android:paddingHorizontal="@dimen/bigger_padding"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="testing layout of screen for ringing record details"/>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/actions_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/huge_padding"
        android:layout_marginBottom="@dimen/huge_padding"
        android:backgroundTint="@color/colorAccent"
        android:text="Actions"
        app:icon="@drawable/baseline_more_horiz_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="DELETE SITE"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/actions_fab"
        app:layout_constraintEnd_toEndOf="@+id/actions_fab"
        app:srcCompat="@drawable/ic_delete" />

    <TextView
        android:id="@+id/delete_fab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Delete Record"
        app:layout_constraintBottom_toBottomOf="@+id/delete_fab"
        app:layout_constraintEnd_toStartOf="@+id/delete_fab"
        app:layout_constraintTop_toTopOf="@+id/delete_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="EDIT SITE"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/delete_fab"
        app:layout_constraintEnd_toEndOf="@+id/delete_fab"
        app:srcCompat="@drawable/ic_edit" />

    <TextView
        android:id="@+id/edit_fab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Edit Details"
        app:layout_constraintBottom_toBottomOf="@+id/edit_fab"
        app:layout_constraintEnd_toStartOf="@+id/edit_fab"
        app:layout_constraintTop_toTopOf="@+id/edit_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/show_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="SHOW RECORDS"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/edit_fab"
        app:layout_constraintEnd_toEndOf="@+id/edit_fab"
        app:srcCompat="@drawable/baseline_format_list_bulleted_24" />

    <TextView
        android:id="@+id/show_fab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Show Recorded Birds"
        app:layout_constraintBottom_toBottomOf="@+id/show_fab"
        app:layout_constraintEnd_toStartOf="@+id/show_fab"
        app:layout_constraintTop_toTopOf="@+id/show_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="ADD NEW BIRD RECORD"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/show_fab"
        app:layout_constraintEnd_toEndOf="@+id/show_fab"
        app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/add_fab_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Add New Birds"
        app:layout_constraintBottom_toBottomOf="@+id/add_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_fab"
        app:layout_constraintTop_toTopOf="@+id/add_fab" />

</androidx.constraintlayout.widget.ConstraintLayout>
